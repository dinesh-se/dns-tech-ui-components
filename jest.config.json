{
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "setupFilesAfterEnv": [
    "<rootDir>/test-utils/setup.js",
    "jest-prop-type-error"
  ],
  "testMatch": ["<rootDir>/tests/**/*.test.js"],
  "moduleNameMapper": {
    "^.+\\.(css|scss|mdx)$": "<rootDir>/test-utils/file.mock"
  },
  "collectCoverageFrom": [
    "<rootDir>/src/components/**/*.js",
    "!<rootDir>/src/components/**/index.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  }
}
