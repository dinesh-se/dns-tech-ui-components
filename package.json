{
  "name": "@dns-tech/ui-components",
  "version": "0.0.0-development",
  "description": "UI components library built with React using spectre.css",
  "main": "lib/index.js",
  "author": "Dinesh Haribabu <dinesh.be.gct@gmail.com> (https://dineshharibabu.in)",
  "license": "MIT",
  "keywords": [
    "react-components",
    "backpack-ui",
    "storybook",
    "spectre.css"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dinesh-se/dns-tech-ui-components.git"
  },
  "bugs": {
    "url": "https://github.com/dinesh-se/dns-tech-ui-components/issues"
  },
  "homepage": "https://github.com/dinesh-se/dns-tech-ui-components#readme",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "@storybook/addon-actions": "^6.1.20",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/addon-storyshots": "^6.1.20",
    "@storybook/addon-storyshots-puppeteer": "^6.1.20",
    "@storybook/addons": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "chromatic": "^5.6.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-react": "^7.22.0",
    "husky": "4",
    "jest": "^26.6.3",
    "jest-prop-type-error": "^1.1.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "puppeteer": "^8.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "semantic-release": "^17.3.9",
    "spectre.css": "^0.5.9",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "object-hash": "^2.1.1",
    "react-id-generator": "^3.0.1",
    "react-syntax-highlighter": "^15.4.3",
    "styled-components": "^5.2.1"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "spectre.css": "^0.5.9"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:hook"
    }
  },
  "scripts": {
    "bootstrap": "yarn --frozen-lockfile",
    "clean": "rimraf lib",
    "clean:sb": "rimraf storybook-static",
    "sb": "start-storybook -p 6006",
    "build-sb": "yarn clean:sb && build-storybook",
    "build": "yarn clean && babel src --out-dir lib --ignore '**/stories'",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "yarn coverage && yarn test:storyshots",
    "test:ut": "jest",
    "test:hook": "jest --bail --changedSince origin/main",
    "test:storyshots": "yarn build-sb && jest -c=jest.config.storyshots.json",
    "coverage": "jest --coverage",
    "package-generate": "npm pack",
    "package-check": "npm publish --dry-run",
    "chromatic": "chromatic --project-token CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes"
  }
}
